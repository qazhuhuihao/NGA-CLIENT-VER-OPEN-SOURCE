<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="gov.anzong.androidnga"
    android:configChanges="orientation|screenSize"
    android:installLocation="auto"
    android:largeHeap="true">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" tools:node="remove"/>

    <application
        android:name=".NgaClientApp"
        android:anyDensity="false"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/label_activity_main"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@android:style/Theme.Holo.Light"
        tools:ignore="AllowBackup"
        tools:replace="android:label">
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|screenSize|locale|screenLayout|smallestScreenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

            <!-- add static shortcut -->
            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/static_shortcuts" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/label_activity_login"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.ProfileActivity" />
        <activity
            android:name=".activity.PostActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.AvatarPostActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.SignPostActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.MessagePostActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/menu_setting"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.MessageListActivity"
            android:label="@string/label_activity_message_list" />
        <activity
            android:name=".activity.MessageDetailActivity"
            android:label="@string/label_activity_message_detail" />

        <activity
            android:name=".activity.TopicListActivity"
            android:configChanges="orientation|screenSize|locale|screenLayout|smallestScreenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="bbs.nga.cn"
                    android:path="/thread.php"
                    android:scheme="http" />

                <data
                    android:host="bbs.ngacn.cc"
                    android:path="/thread.php"
                    android:scheme="http" />

                <data
                    android:host="nga.178.com"
                    android:path="/thread.php"
                    android:scheme="http" />

                <data
                    android:host="bbs.nga.cn"
                    android:path="/thread.php"
                    android:scheme="https" />

                <data
                    android:host="bbs.ngacn.cc"
                    android:path="/thread.php"
                    android:scheme="https" />

                <data
                    android:host="nga.178.com"
                    android:path="/thread.php"
                    android:scheme="https" />

                <data
                    android:host="ngabbs.com"
                    android:path="/thread.php"
                    android:scheme="https" />

                <data
                    android:host="ngabbs.com"
                    android:path="/thread.php"
                    android:scheme="https" />

            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ArticleListActivity"
            android:configChanges="orientation|screenSize|locale|screenLayout|smallestScreenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="nga.178.com"
                    android:path="/read.php"
                    android:scheme="http" />
                <data
                    android:host="bbs.ngacn.cc"
                    android:path="/read.php"
                    android:scheme="http" />
                <data
                    android:host="bbs.nga.cn"
                    android:path="/read.php"
                    android:scheme="http" />

                <data
                    android:host="nga.178.com"
                    android:path="/read.php"
                    android:scheme="https" />
                <data
                    android:host="bbs.ngacn.cc"
                    android:path="/read.php"
                    android:scheme="https" />
                <data
                    android:host="bbs.nga.cn"
                    android:path="/read.php"
                    android:scheme="https" />

                <data
                    android:host="ngabbs.com"
                    android:path="/read.php"
                    android:scheme="https" />

                <data
                    android:host="ngabbs.com"
                    android:path="/read.php"
                    android:scheme="https" />

            </intent-filter>
        </activity>
        <activity android:name=".gallery.ImageZoomActivity" />
        <activity android:name=".activity.ForumListActivity" />
        <activity android:name=".activity.WebViewerActivity" />
        <activity android:name=".activity.RecentNotificationActivity" />
        <activity android:name=".activity.LauncherSubActivity" />
        <activity
            android:name=".activity.SearchActivity"
            android:label="@string/search" />
        <activity
            android:name=".activity.AboutActivity"
            android:label="@string/title_about" />

        <activity android:name=".activity.TopicCacheActivity" android:label="我的缓存" />
        <activity android:name=".activity.ArticleCacheActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>